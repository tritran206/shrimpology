<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShrimpDetails"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/shrimp_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/shrimp_detail_margin"
        android:layout_marginLeft="@dimen/shrimp_detail_margin"
        android:layout_marginBottom="@dimen/input_margin"
        android:layout_marginRight="@dimen/shrimp_detail_margin"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/shrimp_photo"
        android:layout_marginLeft="@dimen/shrimp_detail_margin"
        android:layout_marginRight="@dimen/shrimp_detail_margin"
        android:layout_marginTop="@dimen/input_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shrimp_parameters"
        android:textSize="16dp"
        android:layout_marginTop="@dimen/input_margin"
        android:layout_marginLeft="@dimen/shrimp_detail_margin"
        android:layout_marginRight="@dimen/shrimp_detail_margin"
        android:text="Water Parameters"/>

</LinearLayout>